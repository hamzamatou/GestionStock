@page
@model RegisterModel
@{
    ViewData["Title"] = "Compte Utilisateur";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Data/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }


        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        label {
            font-weight: bold;
        }
        .form-control {
            width: 400px; /* Vous pouvez ajuster la largeur ici */
        }
    </style>
</head>
<body>
        <h1>@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Créer un nouveau compte.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Nom">Nom</label>
                <input asp-for="Input.Nom" class="form-control" />
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Prenom">Prénom</label>
                <input asp-for="Input.Prenom" class="form-control" />
                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email">Adresse e-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.SelectedRole">Rôle</label>
                <select asp-for="Input.SelectedRole" class="form-control" asp-items="Model.Input.Roles"></select>
                <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Créer</button>
        </form>
        <div>
            <a asp-action="Index" asp-controller="User">Retour à la liste</a>
        </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
