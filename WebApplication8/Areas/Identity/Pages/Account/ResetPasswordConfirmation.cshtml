@page
@model ResetPasswordConfirmationModel
@{
    Layout = null;
    ViewData["Title"] = "Confirmation de réinitialisation du mot de passe";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Data/all.min.css">
    <link rel="stylesheet" href="~/Data/all.min.css">
    <style>
        .confirmation-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .confirmation-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #007bff;
            }

            .confirmation-container p {
                font-size: 18px;
                color: #333;
            }

            .confirmation-container a {
                color: #007bff;
                text-decoration: none;
            }

                .confirmation-container a:hover {
                    color: #0056b3;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h1>@ViewData["Title"]</h1>
        <p>
            Votre mot de passe a été réinitialisé. Veuillez <a asp-page="./Login">cliquer ici pour vous connecter</a>.
        </p>
    </div>

    <script src="~/Data/bootstrap.bundle.min.js"></script>
</body>
</html>