@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Connexion";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Data/all.min.css">
    <link rel="stylesheet" href="~/Data/bootstrap.min.css">
    <style>
        .vh-100 {
            height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .background-color {
            background: url('/image/img_capabilities.jpg') no-repeat center center/cover;
            position: relative;
            height: 100vh;
            overflow: hidden;
        }

            .background-color::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: inherit;
                filter: blur(10px);
                z-index: -1;
                transform: scale(1.1);
            }

        .container {
            max-width: 900px;
            z-index: 1;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.5);
            overflow: hidden;
        }

        .img-fluid {
            border-radius: 1rem 0 0 1rem;
            height: 100%;
            object-fit: cover;
        }

        .btn-dark {
            background-color: #212529;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-dark:hover {
                background-color: #343a40;
            }

        .small {
            font-size: 0.85rem;
        }

        .h1, h5 {
            margin-bottom: 1rem;
        }
    </style>

</head>
<body class="vh-100 background-color">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/image/img_capabilities.jpg"
                                 alt="formulaire de connexion" class="img-fluid" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <img src="~/image/images.png" style="height:50px; height:50px;">
                                        <span class="h1 fw-bold mb-0">AsteelFlash</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connectez-vous à votre compte</h5>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17">Login</label>
                                        <input asp-for="Input.Email" id="form2Example17" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example27">Mot de passe</label>
                                        <input asp-for="Input.Password" id="form2Example27" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-check mb-4">
                                        <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-dark btn-lg btn-block">Se connecter</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;"></p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="~/Data/jquery-3.6.0.min.js"></script>
        <script src="~/Data/bootstrap.bundle.min.js"></script>
    }
</body>
</html>
