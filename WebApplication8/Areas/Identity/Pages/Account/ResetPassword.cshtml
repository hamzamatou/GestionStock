@page
@model ResetPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Réinitialiser le mot de passe";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Data/all.min.css">
    <link rel="stylesheet" href="~/Data/all.min.css">
    <style>
        .reset-password-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .reset-password-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #007bff;
                text-align: center;
            }

            .reset-password-container h4 {
                font-size: 18px;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

            .reset-password-container hr {
                margin-bottom: 20px;
            }

            .reset-password-container .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
            }

                .reset-password-container .btn-primary:hover {
                    background-color: #0056b3;
                    border-color: #004085;
                }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <h1>@ViewData["Title"]</h1>
        <h4>Réinitialisez votre mot de passe.</h4>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Nouveau mot de passe</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmez le mot de passe</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Réinitialiser</button>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/Data/bootstrap.bundle.min.js"></script>
</body>
</html>