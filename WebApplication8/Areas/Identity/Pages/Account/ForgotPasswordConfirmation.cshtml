@page
@model ForgotPasswordConfirmation
@{
    Layout = null;
    ViewData["Title"] = "Confirmation de réinitialisation du mot de passe";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .confirmation-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .confirmation-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #007bff;
            }

            .confirmation-container p {
                font-size: 18px;
                color: #333;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .logo {
            margin-bottom: 20px;
        }

            .logo img {
                max-width: 300px;
            }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="logo">
            <img src="~/image/logo.png" alt="Logo AsteelFlash">
        </div>
        <h1>@ViewData["Title"]</h1>
        <p>
            Veuillez vérifier votre email pour réinitialiser votre mot de passe.
        </p>
    </div>
</body>
</html>
