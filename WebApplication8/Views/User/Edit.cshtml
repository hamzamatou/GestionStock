@model WebApplication8.Models.UserRolesViewModel

@{
    ViewBag.Title = "Modifier l'utilisateur";
}

<h2>Modifier l'utilisateur</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Utilisateur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="Nom" class="control-label col-md-2">Nom</label>
            <div class="col-md-10">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Prenom" class="control-label col-md-2">Prénom</label>
            <div class="col-md-10">
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="control-label col-md-2">Nom d'utilisateur</label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="tel" class="control-label col-md-2">Téléphone</label>
            <div class="col-md-10">
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label col-md-2">Rôle</label>
            <div class="col-md-10">
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">Sélectionner un rôle</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
